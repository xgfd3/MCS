<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/men_signed_height"
        >

      <ImageView
          android:id="@+id/men_item_avatar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_margin="@dimen/small_space"
          android:src="@mipmap/bili_default_avatar"
          />

      <TextView
          android:id="@+id/men_item_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/micro_space"
          android:layout_toRightOf="@id/men_item_avatar"
          android:textAppearance="@android:style/TextAppearance"
          android:padding="@dimen/small_space"
          />

      <TextView
          android:id="@+id/men_item_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/men_item_nickname"
          android:layout_toRightOf="@id/men_item_avatar"
          android:paddingLeft="@dimen/small_space"
          android:paddingTop="@dimen/small_micro_space"
          />

      <Button
          android:id="@+id/men_item_plan_btn"
          android:layout_width="@dimen/button_width_2_words"
          android:layout_height="@dimen/button_height_micro"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_margin="@dimen/small_space"
          android:background="@drawable/selector_btn"
          android:text="@string/men_signed_plan"
          android:textAppearance="@android:style/TextAppearance.Inverse"
          />

      <TextView
          android:id="@+id/men_item_time_sign"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/micro_space"
          android:layout_toLeftOf="@id/men_item_plan_btn"
          android:padding="@dimen/small_space"
          />

      <TextView
          android:id="@+id/men_item_place_sign"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/men_item_time_sign"
          android:layout_toLeftOf="@id/men_item_plan_btn"
          android:padding="@dimen/small_space"
          />

    </RelativeLayout>
</LinearLayout>