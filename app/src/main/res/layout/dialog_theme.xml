<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/theme_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:hint="@string/dialog_theme_content"/>

        <ImageView
            android:id="@+id/theme_edit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_edit_blue"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/theme_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_theme_description"/>

</LinearLayout>
